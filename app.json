{
  "expo": {
    "name": "LocalSend",
    "slug": "localsend",
    "version": "3.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "resizeMode": "cover",
    "userInterfaceStyle": "automatic",
    "scheme": "localsend",
    "platforms": [
      "web",
      "ios",
      "android"
    ],
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#1a1a2e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.localsend.app",
      "infoPlist": {
        "NSLocalNetworkUsageDescription": "LocalSend needs access to your local network to discover nearby devices and transfer files securely.",
        "NSBonjourServices": [
          "_localsend._tcp",
          "_localsend._udp"
        ]
      },
      "deploymentTarget": "15.1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e",
        "resizeMode": "cover"
      },
      "package": "com.localsend.app",
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "ACCESS_WIFI_STATE",
        "CHANGE_WIFI_MULTICAST_STATE",
        "FOREGROUND_SERVICE",
        "POST_NOTIFICATIONS",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_SCAN",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_ADVERTISE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "minSdkVersion": 24,
      "compileSdkVersion": 35
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png",
      "resizeMode": "cover"
    },
    "plugins": [
      "expo-router",
      "expo-system-ui",
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true,
            "enableMinifyInReleaseBuilds": true,
            "extraProguardRules": "-dontwarn io.netty.**\n-dontwarn sun.security.**\n-dontwarn org.slf4j.**\n-dontwarn org.apache.log4j.**\n-dontwarn org.apache.logging.log4j.**"
          },
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "expo-share-intent"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "153e68a9-85b8-4ff1-87b6-f0d33856184d"
      }
    }
  }
}
